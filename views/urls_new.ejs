<!-- a basic form page that we will use to submit URLs to be shortened -->

<% include ./partials/_head %>

<% include ./partials/_header %>

<body style='font-size:20px; padding:50px;'>
  <form action='/urls' method='POST' style='margin:150px;'>
    <label for='longURL'>Enter a new URL and change it if you make a mistake:</label>
    <input id='longURL' type='text' name='longURL' placeholder='http://' style='width: 300px'>
    <input type='submit' value='Submit'>
  </form>
  <a href="/urls">Click to go to the URL list</a>
</body>
</html>